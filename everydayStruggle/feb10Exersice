//Create three boxes in your HTML / CSS
//Click on a box and have it rotate (45+ degrees each click)
//On a click of a box, turn that box into a circle and have it move to the right


const box1= document.querySelector("#box1")
let num = 0
// the let variable set will refresh everytime to be clicked therefore do not use that for the num = num +45 setup
// its ok to const a query Selector because the element you are targetting should not change
box1.addEventListener("click", () => {
  num = num + 45;
  box1.style.transform = `rotateZ(${num}deg)`
  // a template literal is what exist when you have a value printed inside a string
  //  the backticks and with ${value} makes this string a template literal string
  // we want it to move around the Z axis because Y and X axis would have it static
  console.log(num)
  // prints the num
})


//On the third click of each box change the color of the other two boxes
// Paramemter click addEventListener
// Return thrid click and background change for other two boxes
const boxes= document.querySelectorAll(".box")
// the value of boxes is an array, a collection of data in a single set
let box1Clicks = 0, box2Clicks = 0,box3Clicks = 0;
// the let box clicks allow us to start the counter for box clicks

boxes.forEach(el => {
  el.addEventListener("click",()=>{
    // event listeners do not go away
    const boxClicked = event.target.id
    // once the event is choosen in this case: click. the target is where my cursors is and tells us the id
    if( boxClicked === "box1"){
      box1Clicks ++}
      else if (boxClicked === "box2"){
        box2Clicks ++}
      else{box3Clicks++}

      if( box1Clicks !==3 && box2Clicks !== 3 && box3Clicks !== 3){
        document.querySelector("#box2").style.background = "white"
        document.querySelector("#box3").style.background = "white"
        document.querySelector("#box1").style.background = "white"

      }

      if ( box1Clicks === 3){
        document.querySelector("#box2").style.background = "red"
        document.querySelector("#box3").style.background = "red"
        box1Clicks = 0
      } else if ( box2Clicks === 3 ){
        document.querySelector("#box1").style.background = "red"
        document.querySelector("#box3").style.background = "red"
        box2Clicks = 0}
        else if ( box3Clicks === 3 ){
          document.querySelector("#box1").style.background = "red"
          document.querySelector("#box2").style.background = "red"
          box3Clicks = 0}


      }
      }
    }
  })
})
